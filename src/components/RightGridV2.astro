---
import FeatureCard from "./FeatureCard.astro";
import { Image } from "astro:assets";
import Card from "./Card.astro";
---

<div class="grid gap-4 grid-rows-[1fr_4fr] grid-cols-1">
  
  <!-- ðŸ”¹ Top Feature Cards -->
  <div class="rounded-lg grid md:grid-cols-4 sm:grid-cols-2 grid-cols-1 gap-2">
    <FeatureCard imageSrc="/18hrsUp.png" imageAlt="thunderbolt" description="Advanced Camera ISP" />
    <FeatureCard imageSrc="/18hrsUp.png" imageAlt="thunderbolt" description="Battery life" />
    <FeatureCard imageSrc="/tablet.png" imageAlt="tablet" description="Up to battery life" />
    <FeatureCard title="3.5x" description="Faster CPU" isGradient={true} />
  </div>

  <!-- ðŸ”¹ Two-Column Section -->
  <div class="grid md:grid-cols-2 sm:grid-cols-1 grid-cols-1 gap-5 rounded-lg">
    
    <!-- Left Section -->
    <div class="rounded-2xl grid md:grid-rows-[2fr_1fr] gap-5">
      <Card className="rounded-lg w-full h-full flex items-center justify-center">
        <Image src="/macbook.png" alt="MacBook" class="rounded-lg w-full h-auto" width={600} height={600} />
      </Card>
      <div class="grid sm:grid-cols-2 grid-cols-1 gap-4">
        <FeatureCard imageSrc="/keyboard.png" imageAlt="keyboard" description="Magic Keyboard" />
        <FeatureCard title="Silent design" description="Apple M1 chip" isGradient={true} />
      </div>
    </div>

    <!-- Right Section -->
    <div class="rounded-2xl grid sm:grid-cols-1 md:grid-cols-2 md:grid-rows-3 grid-cols-1 gap-5">
      <div class="grid col-span-2 sm:grid-cols-2 md:grid-cols-3 gap-4">
        <FeatureCard imageSrc="/padlock.png" imageAlt="touch id" description="Secure Enclave" />
        <FeatureCard title="5x" description="Faster graphics" isGradient={true} />
      </div>
      <Card className="col-span-2 md:row-span-2">
        <div class="h-[240px] w-full">
          <Image src="/m3.png" alt="M3 Chip" class="rounded-lg object-cover w-full h-full" width={240} height={240} />
        </div>
      </Card>
    </div>

  </div>
</div>
